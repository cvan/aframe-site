@import "_common"
@import "_settings"

code,
pre,
.example__viewsource,
.sidebar .page-title,
.menu-item a {
  font-family: $code-font;
}
.hidden {
  display !important;
}
em {
  color: #7f8c8d;
}

html {
  background: #ef2d5e;
}

html[data-is-home="true"] {
  min-width: 1000px;
}
body {
  color: #fff;
}
a {
  border-bottom: 1px solid rgba(255,255,255,.3);
  color: rgba(255,255,255,.85);
  text-decoration: none;
}
a:hover {
  border-bottom-color: rgba(255,255,255,.6);
  color: #fff;
}
a:active,
a.click {
  border-bottom-color: rgba(255,255,255,.9);
  color: #fff;
}
ul {
  list-style-type: none;
}
.logo__wordmark {
  background: url("../images/aframe-name-white.svg") no-repeat;
}
.sidebar {
  -webkit-overflow-scrolling: touch;
  -ms-overflow-style: none;
  width: 370px;
}
.sidebar::-webkit-scrollbar {
  width: 0 !important;
}

.sidebar .page-title {
  font-size: 15px;
  color: rgba(0,0,0,0.6);
  font-weight: 100;
  letter-spacing: 0.02em;
}
.main {
  display: flex;
  height: 100%;
}
.sidebar,
.content {
  position: relative;
}
.sidebar {
  max-width: 400px;
  overflow-x: hidden;
}
.sidebar__wrap {
  height: 100vh;
  position: relative;
  overflow-y: auto;
}
.content {
  background-color: #24CAFF;
  /*
  display: flex;
  flex: 1;
  flex-direction: column;
  overflow-y: auto;
  */
}
.example__controls {
  position: absolute;
  text-transform: uppercase;
  top: 5px;
  right: 5px;
  z-index: 2;
  font-size: 12px;
  line-height: 1.5;
  a {
    background: rgba(0,0,0,0.35);
    color: #fff;
    display: inline-block;
    padding: 5px 10px;
    &:active, &:hover {
      background-color: #ef2d5e;
    }
  }
}
.aframe-animation .example__controls {
  display: none;
}
[data-is-mobile="true"] .example__controls {
  display: none;
}
.page__title {
  line-height: 1.3;
  font-size: 36px;
  font-weight: 600;
}
.subnav-link {
  font-size: 16px;
  font-weight: 300;
  margin-left: -3px;
  padding: 2px 4px 2px 3px;
  display: block;
  transition: 0.05s color ease;
  color: #fff;
  width: 100%;
}
.subnav-link:hover {
  background-color: rgba(0,0,0,0.05);
  color: #fff;
}
.subnav-link:active,
.subnav-link.click {
  background-color: rgba(0,0,0,0.5);
}
.subnav-link.current,
.subnav-link.current:hover {
  font-weight: 500;
  color: #fff;
}
.example__iframe {
  display: block;
}
.example-nav-link {
  border: 0;
  height: 100%;
  font-size: 2rem;
  font-weight: 600;
  display: inline-block;
  padding: 0.5rem 1rem;
  margin: -0.5rem -1rem;
  width: 50%;
}
.example-nav-link span {
  display: none;
}
.example-nav-next {
  text-align: right;
}

.credits {
  background: url(../images/mozvr-white.svg) 45% 60% no-repeat;
  background-size: 80% 80%;
  position: absolute;
  bottom: 0;
  left: 0;
  height: 50px;
  width: 90px;
  margin: 0 20px 20px;
}
.credits:hover {
  background-color: rgba(0,0,0,.1);
}

.sponsor
  vertical-align middle
  position absolute
  top -3px
  right 0
  margin 20px 20px 0
  height 30px
  +media--desktop()
    margin 40px 40px 0

.sponsor .message {
  margin-right: 7px;
  display: inline-block;
  height: 30px;
  line-height: 30px;
  vertical-align: top;
  font-weight: 300;
}
a.mozilla-logo {
  border-width: 0;
  display: inline-block;
  opacity: 0.8;
  background: url(../images/mozilla-logo.svg) no-repeat;
  height: 24px;
  width: 88px;
  position: relative;
  top: 1px;
  transition: .15s opacity ease-in-out;
}
a.mozilla-logo:hover {
  opacity: 1;
}

.examples-subnav {
  margin-top: 0.5rem;
}
.btn-index {
  color: #fff;
}
.content--examples,
.content--body {
  height: 100%;
}
.content--examples .content--body {
  background: #DADADA;
}
.content--index {
  // flex-direction: row;
}

.content--index .slogan
  color #fff
  font-size 28px
  font-weight 400
  line-height 1.2
  letter-spacing -0.05rem
  +media--desktop()
    max-width 400px

.content--index .intro
  color #fff
  font-size 16.5px
  font-weight 300
  line-height 1.55
  margin 1rem 0
  /*width: 350px;*/

.content--index .disclaimer {
  color: rgba(255,255,255,0.5);
}
.menu {
  margin-left: -10px;
  margin-bottom: 38px;
}
.menu-item {
  display: inline-block;
}
.menu-item a {
  border-bottom-width: 0;
  color: rgba(0,0,0,.6);
  margin: 0 -10px;
  padding: 0 20px;
  font-weight: 600;
  text-transform: uppercase;
}
.menu-item a:hover {
  // border-bottom: 1px solid rgba(255,255,255,.9);
  color: #111;
  font-weight: bold;
}
.btn-cta {
  background-color: #fff;
  border: 3px solid #fff;
  color: #000;
  display: inline-block;
  font-size: 15px;
  font-weight: 300;
  letter-spacing: 0.05rem;
  margin-top: 20px;
  padding: 8px 30px;
  text-align: center;
  text-transform: uppercase;
  transition: 0.05s ease;
}
.btn-cta:hover {
  background-color: #fff;
  color: #ef2d5e;
}
.btn-cta:active {
  opacity: 0.8;
}
.mobile-get-started {
  display: none;
}
@media screen and (max-width: 399px) {
  #logo {
    max-width: 40vw;
  }
}
@media screen and (min-width: 480px) {
  .example__controls {
    top: 20px;
    right: 20px;
  }
}
@media screen and (min-width: 768px) {
  .example__controls {
    top: 30px;
    right: 30px;
  }
}
@media only screen and (max-device-width: 736px) and (orientation: landscape) {
  .sidebar {
    display: none;
  }
}

// Hide items based on compatibility.
// Example: "360 Video" example on mobile until autoplay/inline video UX issues handled properly.
// See https://github.com/aframevr/aframe/issues/316
[data-is-android="true"] [data-supports-android="false"],
[data-is-ios="true"] [data-supports-ios="false"] {
  display: none !important;
}

.home-content {
  // display: flex;
  width: 100%;
}

.home-center {
  //flex: 2;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  // right: auto;
  height: 100vh;
  width: 100%;
  overflow: hidden;
}

.home-center .example__iframe {
  // margin-left: 0%;
  margin-left: 370px;
  width: 100%;
}

.content--index .copy__wrap {
  // background: rgba(0,0,0,.8);
  background: #24caff;
  height: 100%;
  // margin-left: auto;
  position: relative;
  overflow-y: auto;
  min-width: 600px;
  z-index: 1;
}

.home-feature-links {
  display: none;
  font-size: 16px;
  font-weight: 300;
  margin-bottom: 25px;

  li {
    margin-left: -3px;
    padding: 2px 4px 2px 3px;
    text-transform: uppercase;

    &:hover {
      background-color: rgba(0,0,0,0.05);
    }
  }
  a {
    border: 0;
    color: #FFF;
    display: block;
  }
}

[data-is-mobile="false"] .home-feature-links {
  display: block;
}

.example-tracked-controllers {
  display: inline-block;
  height: 18px;
  left: 1px;
  position: relative;
  top: 4px;
  width: 20px;
}

.blog-list {
  display: none;
  padding-bottom: 10px;
  +media--desktop() {
    display: block;
  }
}

.blog-list .page-title a {
  border-bottom: 0;
  font-weight: 300;
  font-size: 15px;
  color: rgba(0,0,0,0.6);
  font-weight: 100;
  letter-spacing: 0.02em;
}

.blog-list .subnav-link {
  width: 220px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.example-nav {
  margin-top: 18px;
}

