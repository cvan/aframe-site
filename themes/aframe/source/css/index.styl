.cta {
  padding: 1rem 0;
}

.description a {
  color: rgba(0,0,0,.5);
  transition: .15s color ease-in-out;
}
.description a:hover {
  color: rgba(0,0,0,.75);
}

.in-the-wild {
  h3 {
    margin-bottom: -1rem;
    padding-top: 2.5rem;
  }
}

.sponsor {
  height: 30px;
}
.sponsor .message {
  margin-right: 7px;
  display: inline-block;
  height: 30px;
  line-height: 30px;
  vertical-align: top;
  font-weight: 300;
}
a.mozilla-logo {
  display: inline-block;
  opacity: .8;
  height: 24px;
  width: 84px;
  border: none;
  margin-left: .25ch;
  top: 1px;
  transition: .15s opacity ease-in-out;
}
a.mozilla-logo:hover {
  opacity: 1;
}
.mozilla-logo-wordmark {
  background: url(../images/mozilla-logo.svg) no-repeat;
  display: inline-block;
  height: 24px;
  width: 84px;
}

[data-section~="hello-world"] {
  ul {
    list-style-type: none;
    margin-left: 1.5rem;
    padding: 1.5rem 0 0;
  }

  li + li {
    padding-top: .25rem;
  }
}

[data-section~="intro"] {
  .wordmark {
    width: 250px;
  }

  nav {
    align-content: flex-start;
    align-items: flex-start;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
  }

  ul {
    display: flex;
    list-style-type: none;

    &:first-of-type {
      flex-grow: 1;
      // flex-shrink: 0;
      // flex-basis: 200px;
    }

    li {
      // flex: 1;
      + li {
        padding-left: 1rem;
      }
    }

    a {
      color: rgba(255,255,255,.8);
      display: block;
      text-decoration: none;

      &:hover {
        color: rgba(255,255,255,1);
      }

      span {
        display: block;
        padding: .65rem .5rem;
      }
    }
  }

  ul:last-child {
    // margin-left: auto;
    // flex: 1;
    text-align: right;
  }
}
