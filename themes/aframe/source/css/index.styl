$color-background = #fff;
$color-primary = #ef2d5e;
$color-primary-faded = #f9f1f5;
$color-white = #fff;
$font-copy = BlinkMacSystemFont, -apple-system, Segoe UI, Roboto, Oxygen, Ubuntu, Cantarell, Fira Sans, Droid Sans, Helvetica Neue, Helvetica, Arial, sans-serif;
$font-mono = Consolas, Andale Mono, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
$font-wordmark = Futura, $font-copy;

* {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html,
body {
  height: 100%;
}

html {
  background-color: $color-primary-faded;
  font-size: 14px;
}

body {
  font-size: 1rem;
  line-height: 1.5;
}

body,
.copy {
  font-family: $font-copy;
}

code,
pre,
tt
.code,
.tt,
.mono {
  font-family: $font-mono;
}

.wrap {
  margin: 0 auto;
  max-width: 70rem;
  padding: 0 1.5rem;
}

.header {
  background-color: $color-primary;
  border-bottom: 1px solid rgba(0,0,0,.15);
  padding: 1.5rem 0;
  padding-top: calc(1rem + 1.5vw + .5vh);
  padding-bottom: calc(1rem + 1.5vw + .5vh);
  width: 100%;
}

.wordmark-link,
.wordmark-link:hover {
  color: rgba(0,0,0,.25);
}

.wordmark-link {
  display: block;
  font-family: $font-mono;
  font-size: 2rem;
  font-weight: 300;
  letter-spacing: .25ch;
  line-height: 1.4;
  text-decoration: none;
  text-transform: uppercase;

  span {
    color: $color-white;
    font-family: $font-wordmark;
    font-weight: bold;
    text-shadow: 1px 2px 0 rgba(0,0,0,.25);

    &:before {
      background: url(../images/aframe-sticker-diecut.svg) no-repeat;
      content: "";
      display: inline-block;
      height: 30px;
      width: 30px;
    }
  }
}

.wordmark-link:before,
.wordmark-link:after {
  display: inline;
}

.wordmark-link:before {
  content: "<";
  padding-right: .15ch;
}

.wordmark-link:after {
  content: ">";
  padding-left: .15ch;
}

.description {
  color: rgba(0,0,0,.5);
  font-family: $font-wordmark;
  font-size: 1.5rem;
  padding: 4.5rem 0 3rem;
  text-align: center;
}

.hello-world {
  margin: 0 auto;
  max-width: 800px;
}

[data-section] h2 {
  padding-bottom: 1.5rem;
}

[data-section] p + p {
  padding-top: 1rem;
}

[data-section] {
  border-bottom: 1px dotted #eee;
  margin-bottom: 4.5rem;
  padding-bottom: 4.5rem;
}

[data-section] > .wrap {
  align-items: start;
  display: flex;
}

[data-section~="intro"] {
  border-bottom-width: 0;
  margin-bottom: 0;
}

[data-section] aside[data-aside] {
  max-width: 50%;
  padding-right: 3rem;
  flex: 1;
}

[data-section] section {
  padding-left: 3rem;
  flex: 1;
}

[data-section~="hello-world"] {
  display: block;

  section {
    padding-top: 3rem;
    padding-left: 0;
  }
}

a {
  transition: .15s color ease-in-out, .15s opacity ease-in-out;
}

a,
a:visited {
  color: blue;
}

a:hover {
  color: magenta;
}

h2,
h2 a,
h2 a:visited {
  color: #333;
}

h2 a {
  text-decoration: none;
}

h2 a:hover {
  color: #111;
}

.code-snippet {
  background: rgba(17,17,17,.8);
  border: 1px solid rgba(0,0,0,.2);
  border-radius: 2px;
  color: #fff;
  width: 100%;
  overflow-x: auto;
  padding: .5rem 1rem;
}

[data-section~="communities"],
[data-section~="demos"],
[data-section~="feed"],
[data-section~="workflows"] {
  ul {
    list-style-type: none;
  }
}

.btn {
  background: #fff;
  border: 1px solid rgba(0,0,0,.2);
  border-radius: 2px;
  padding: .5rem 1rem;
  text-decoration: none;
  transition: .15s scale ease-in-out;
  transform: scale(.8);
}

.btn:hover,
.btn:active {
  border-color: rgba(0,0,0,.4);
  transform: scale(1);
}

[data-section] [data-aside] aside {
  padding-top: 1.5rem;

  h3 {
    color: #666;
    padding-top: .5rem;
  }

  p {
    padding: .5rem 0;
  }
}

[data-section] section {
  li + li {
    padding-top: .5rem;
  }

  a {
    text-decoration: none;
    &:hover {
      text-decoration: underline;
    }
  }
}

.tri-grid {
  display: flex;
  margin: 0 0 0 -1.5rem;
  padding-top: 1.5rem;
  max-width: 20rem;

  li {
    flex: 1;
    padding: 0 1.5rem;
    max-width: 20rem;
  }
}

[data-section~="feed"] {
  display: block;
}

