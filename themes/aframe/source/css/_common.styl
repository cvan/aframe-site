@import "_settings"
@import "_syntax"

*
    margin 0
    padding 0
    box-sizing border-box

html, body
    height 100%

html,
code
    font-size 14px

body
    font $body-font-weight $body-font-size/$body-line-height $body-font
    color $medium

iframe, img, button, input[type=button], .btn
    border 0

.borderless-links a,
a.borderless-links,
a.borderless-link
    border 0

/**
 * Hide only visually, but have it available for screen readers:
 * http://snook.ca/archives/html_and_css/hiding-content-for-accessibility
 */
.hidden-visually
    border 0
    clip rect(0 0 0 0)
    height 1px
    margin -1px
    overflow hidden
    padding 0
    position absolute
    width 1px

strong
    font-weight 600

code,
pre
    font-family $code-font

pre
    font-size 13px

[data-is-mobile="true"]
    code,
    pre
        font-size 8.5px

.font-loaded-mono code,
.font-loaded-mono pre
    font-family $code-font

p, li, dd
    code
        background #F8F8F8
        font-weight 600
        padding 0 2px

h3 code
    background #F8F8F8
    padding-left 2px
    padding-right 2px

/* This looks better on the "Community" page. */
[data-page-type="community"] li code
    font-weight 500

p
    word-spacing 0.05em

h1
    color $blue-dark

h2, h3, h4
    color $dark
    font-weight 500

h4
    font-weight 600

.btn
    cursor pointer
    font inherit

.copy__wrap
    max-width 100%
    +media--desktop()
        max-width 700px

.nav, .subnav
    list-style-type none

.copy
    a.btn
        font-size .9em
        color #fff
        margin .2em 0
        max-width 180px
        text-align center
        padding 12px 24px
        display inline-block
        vertical-align middle
    img
        max-width 100%
    span.light
        color $light
    span.info
        font-size .85em
        display inline-block
        vertical-align middle
        width 280px
        margin-left 20px
    h2
        margin 1.5em 0 .8em
        padding-bottom .7em
        border-bottom 1px solid $border
    h3, h3 code
        font-size 1.5rem
    h3, h4
        margin 2em 0 0.25em
        position relative
    figure, p, ul, ol, table
        margin 15px 0
        &:last-child + .footer
            margin-bottom 0
    p, ul, ol, table
        line-height 1.6
    ul, ol
        padding-left 1.5em
    blockquote
        background #F8F8F8
        margin 2em 0
        padding 5px 5px 5px 20px
        border-left 4px solid $color-primary
        p
            font-weight 400
            margin-left 0
    iframe
        margin 1em 0
    p + h2,
    table + table
        margin-top 1.5em
    .tip
        background-color $codebg
        border-bottom-right-radius $radius
        border-left 4px solid $pink
        border-top-right-radius $radius
        margin 2em 0
        padding 1.5em 2em
        position relative
        &:before
            position absolute
            top 14px
            left -12px
            background-color $pink
            color #fff
            content "!"
            width 20px
            height 20px
            border-radius 100%
            text-align center
            line-height 20px
            font-weight bold
            font-size 14px
        &.tip--dark
            background-color rgba(0,0,0,0.5)
            border-left-color rgba(239,45,94,0.5)
            &:before
                background-color $pink
                border 2px solid #000
                color #fff
                left -14px
        &.tip--thin
            font-size 0.9rem
            padding 1rem 2rem
            &:before
                top 0.75rem
        p:first-child
            margin-top 0
        p:last-child
            margin-bottom 0
    ul
        list-style disc
        margin-left 1em
        padding-left 1em
        ul
            margin-bottom 0
            margin-top 0
    ol
        list-style decimal
        margin-left 1em
        padding-left 1em
    ol ol
        list-style circle

    li + li,
    ul ul li,
    ol ol li
        margin-top: .35rem

.logo__wordmark
    background url(../images/aframe-name-pink.svg) no-repeat
    display block
    height 31px
    margin-bottom 30px
    text-indent -9999px
    +media--desktop()
      height 33px

.float-left
    float left

.float-right
    float right

// Clearfix for floats
.c:after
    clear both
    content ""
    display table

.sidebar__wrap,
.copy__wrap
    padding 40px

@media screen and (max-width: 768px)
    .sidebar__wrap,
    .copy__wrap
        padding 20px

    .logo__wordmark
        margin-bottom 20px

.sponsor {
  vertical-align: middle;
  position: absolute;
  bottom: 0;
  right: 0;
  margin: 0 20px 20px;
  height: 30px;
}
.sponsor .message {
  margin-right: 7px;
  display: inline-block;
  height: 30px;
  line-height: 30px;
  vertical-align: top;
  font-weight: 300;
}
a.mozilla-logo {
  display: inline-block;
  opacity: 0.8;
  background: url(../images/mozilla-logo.svg) no-repeat;
  height: 24px;
  width: 84px;
  border: none;
  margin-left: .25ch;
  top: 1px;
  transition: .15s opacity ease-in-out;
}
a.mozilla-logo:hover {
  opacity: 1;
}

.github-emoji
  vertical-align top

.highlight
    position relative
    background-color $codebg
    padding .2em .2em .1em
    line-height 1.1em
    border-radius $radius
    overflow-x auto
    table, tr, td
        width 100%
        border-collapse collapse
        padding 0
        margin 0
    .gutter
        width 1.5em
    .code
        pre
            padding 1.2em 1.4em
            line-height 1.5em
            margin 0
    &.html, &.js, &.bash, &.css
        &:after
            position absolute
            top 0
            right 0
            color #ccc
            text-align right
            font-size .75em
            padding 5px 10px 0
            line-height 15px
            height 15px
            font-weight 600
    &.html:after
        content 'HTML'
    &.js:after
        content 'JS'
    &.bash:after
        content 'Shell'
    &.css:after
        content 'CSS'
